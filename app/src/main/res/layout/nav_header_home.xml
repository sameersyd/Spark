<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/navBackImg"
        android:scaleType="centerCrop"
        android:alpha="0.25"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_profile_image"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/navName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/nav_profile_image"
        android:textColor="#212121"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:text="DECISION LEE" />

    <TextView
        android:id="@+id/navEmail"
        android:layout_below="@id/navName"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:textSize="13sp"
        android:textColor="#5D5D5D"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HAZE CORP" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_alignParentBottom="true"></LinearLayout>

</RelativeLayout>
