<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/idLayout"
    android:background="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/edit_profileImg"
                android:layout_marginTop="48dp"
                android:layout_width="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="100dp"
                android:src="@drawable/avatar"/>

            <EditText
                android:id="@+id/edit_name"
                android:elevation="6dp"
                android:layout_width="match_parent"
                android:hint="Name"
                android:textColor="#000000"
                android:layout_marginTop="75dp"
                android:textCursorDrawable="@null"
                android:maxLength="13"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:paddingLeft="20dp"
                android:layout_height="60dp"/>

            <EditText
                android:id="@+id/edit_status"
                android:elevation="6dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:hint="Status"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:paddingLeft="20dp"
                android:layout_height="60dp"/>

            <EditText
                android:id="@+id/edit_age"
                android:elevation="6dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:hint="Age"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:inputType="number"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:layout_height="60dp"/>

            <EditText
                android:id="@+id/edit_city"
                android:elevation="6dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:hint="City"
                android:textCursorDrawable="@null"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:paddingLeft="20dp"
                android:layout_height="60dp"/>

            <Spinner
                android:id="@+id/edit_spinner"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_height="60dp"
                android:paddingLeft="20dp"
                android:elevation="6dp"/>

            <EditText
                android:id="@+id/edit_whatsapp"
                android:elevation="6dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:hint="WhatsApp Number"
                android:textCursorDrawable="@null"
                android:inputType="number"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:paddingLeft="20dp"
                android:layout_height="60dp"/>

            <EditText
                android:id="@+id/edit_fb"
                android:elevation="6dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:hint="FB Profile Link"
                android:textCursorDrawable="@null"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:paddingLeft="20dp"
                android:layout_height="60dp"/>

            <EditText
                android:id="@+id/edit_insta"
                android:elevation="6dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:hint="Instagram Link"
                android:textCursorDrawable="@null"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:paddingLeft="20dp"
                android:layout_height="60dp"/>

            <EditText
                android:id="@+id/edit_snap"
                android:elevation="6dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:hint="Snapchat Username"
                android:textCursorDrawable="@null"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:paddingLeft="20dp"
                android:layout_height="60dp"/>

            <Button
                android:id="@+id/saveEdtpro"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#11B4AE"
                android:text="Save changes"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="65dp"
                android:layout_marginLeft="65dp"
                android:fontFamily="sans-serif-condensed"/>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
