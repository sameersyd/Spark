<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    tools:context="com.haze.android.spark.SocialActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:paddingTop="35dp"
        android:paddingBottom="35dp">

        <TextView
            android:id="@+id/social_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text=""
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#222222"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#000000"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/linearLayout"></LinearLayout>

        <TextView
            android:id="@+id/social_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="16dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="20sp"
            android:alpha="0.78"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/social_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="45dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginRight="45dp"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="#333333"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:background="@drawable/social_detail"/>

        <Button
            android:id="@+id/social_blueBtnId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginRight="65dp"
            android:layout_marginLeft="65dp"
            android:background="@drawable/social_blue"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:layout_marginTop="45dp"/>

        <Button
            android:id="@+id/social_greenBtnId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:layout_marginRight="65dp"
            android:layout_marginLeft="65dp"
            android:background="@drawable/social_green"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:layout_marginTop="14dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/social_close"
        android:clickable="true"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="66dp"
        android:background="#191919" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/x"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>
